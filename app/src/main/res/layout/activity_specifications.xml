<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Specifications">

<TextView
    android:id="@+id/Specifications"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Specifications Page"
    android:padding="16dp"
    android:textAlignment="center"
    android:textSize="20sp"
    />

    <ImageView
        android:id = "@+id/specifications_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below = "@id/Specifications"
        />

    <TextView
        android:id="@+id/specifications_text"
        android:layout_width="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/specifications_image"
        android:padding="16dp"
        android:text="Doors"
        android:textStyle="bold"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/first_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/specifications_text"
        android:text="2 Door"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/plus1"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/specifications_text"
        android:layout_marginStart="90dp"
        android:src="@drawable/plus"
        />

      <TextView
        android:id="@+id/first_0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/specifications_text"
        android:text="0"
        android:layout_marginStart="110dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/minus1"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/specifications_text"
        android:layout_marginStart="130dp"
        android:layout_marginTop="-1dp"
        android:src="@drawable/minus" />

    <TextView
        android:id="@+id/second_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="3 Door"
        android:layout_below = "@id/first_title"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/plus2"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/first_title"
        android:layout_marginStart="90dp"
        android:src="@drawable/plus"
        />

    <TextView
        android:id="@+id/second_0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below = "@id/first_title"
        android:text="0"
        android:layout_marginStart="110dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/minus2"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/first_title"
        android:layout_marginStart="130dp"
        android:src="@drawable/minus"
        />

    <TextView
        android:id="@+id/third_title"
        android:layout_below="@id/second_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="4 Door"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/plus3"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/second_title"
        android:layout_marginStart="90dp"
        android:src="@drawable/plus"
        />

    <TextView
        android:id="@+id/third_0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below = "@id/second_title"
        android:text="0"
        android:layout_marginStart="110dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/minus3"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/second_title"
        android:layout_marginStart="130dp"
        android:src="@drawable/minus"
        />

    <TextView
        android:id="@+id/fourth_title"
        android:layout_below = "@id/third_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:text="5 Door"
        android:textAlignment="center"
        />


    <ImageView
        android:id="@+id/plus4"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/third_title"
        android:layout_marginStart="90dp"
        android:src="@drawable/plus"
        />

    <TextView
        android:id="@+id/fourth_0"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below = "@id/third_title"
        android:text="0"
        android:layout_marginStart="110dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/minus4"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below = "@id/third_title"
        android:layout_marginStart="130dp"
        android:src="@drawable/minus"
        />

    <TextView
        android:id="@+id/ends_title"
        android:layout_width="205dp"
        android:layout_marginStart="205dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/specifications_image"
        android:padding="16dp"
        android:text="End Wall"
        android:textStyle="bold"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/LH_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/ends_title"
        android:text="Left Hand"
        android:layout_marginStart="205dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/LH_plus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/ends_title"
        android:layout_marginStart="295dp"
        android:src="@drawable/plus" />

    <TextView
        android:id="@+id/LH_0"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/specifications_text"
        android:layout_marginStart="315dp"
        android:text="0"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/LH_minus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/specifications_text"
        android:layout_marginStart="330dp"
        android:src="@drawable/minus"
        />
    <TextView
        android:id="@+id/RH_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/LH_title"
        android:text="Right Hand"
        android:layout_marginStart="205dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/RH_plus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/LH_title"
        android:layout_marginStart="295dp"
        android:src="@drawable/plus"
        />

    <TextView
        android:id="@+id/RH_0"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/LH_title"
        android:text="0"
        android:layout_marginStart="315dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/RH_minus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/LH_title"
        android:layout_marginStart="330dp"
        android:src="@drawable/minus"
        />

    <TextView
        android:id="@+id/Common_title"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@id/RH_title"
        android:text="Common"
        android:layout_marginStart="205dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/Common_plus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/RH_title"
        android:layout_marginStart="295dp"
        android:src="@drawable/plus"
        />

    <TextView
        android:id="@+id/Common_0"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/RH_title"
        android:text="0"
        android:layout_marginStart="315dp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/Common_minus"
        android:layout_width="20dp"
        android:layout_height="19dp"
        android:layout_below="@id/RH_title"
        android:layout_marginStart="330dp"
        android:src="@drawable/minus"
        />
    <ImageView
        android:id="@+id/checkout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/rectangle"
        android:layout_below="@id/fourth_title"
        android:layout_marginStart="190dp"
/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fourth_title"
        android:layout_marginStart="220dp"
        android:layout_marginTop="90dp"
        android:text="Proceed to Checkout" />

</RelativeLayout>